{
  "title": "Jump Cursor",
  "rules": [
    {
      "description": "left + jl, move cursor forward and backward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["left_option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "h",
              "modifiers": ["left_option"]
            }
          ]
        }
      ]
    }
  ]
}
